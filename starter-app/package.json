{
  "name": "vite-boilerplate",
  "version": "0.0.0",
  "scripts": {
    "dev": "run-p serve-app1 serve-app2 build server:dev client:dev",
    "serve-app1": "cd app1 && npm install && npm run serve",
    "serve-app2": "cd app2 && npm install && npm run serve",
    "client:dev": "vite",
    "server:dev": "ts-node-dev --project tsconfig.server.json --respawn --ignore-watch node_modules src/server",
    "server:build": "tsc --project tsconfig.server.json",
    "client:build": "vite build --watch",
    "build": "npm run server:build && npm run client:build",
    "serve": "vite preview",
    "test": "tsc && prettier --check . && eslint . && stylelint \"**/*.css\"",
    "start": "node dist/server.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.200",
    "@types/node": "^18.11.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.1",
    "@types/systemjs": "^6.15.1",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-loader": "^9.1.2",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "http-proxy-middleware": "^2.0.1",
    "lint-staged": "^11.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4",
    "vite": "^3.2.11"
  },
  "dependencies": {
    "browserslist-useragent": "^4.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^4.6.0",
    "lodash": "4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "systemjs": "^6.15.1"
  }
}
